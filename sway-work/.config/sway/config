include $HOME/.config/sway/basic

### Input configuration
# Laptop
input "1:1:AT_Translated_Set_2_keyboard" xkb_layout de

### Output configuration
#
# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
# output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill

# monitor
output HDMI-A-1 {
    position 0,0
}

# laptop
output eDP-1 {
	resolution 1920x1080
    position 0,1080
    scale 1
}

bar {
    output HDMI-A-1
    position top
    status_command while true; do ./.config/sway/statusline.fish; sleep 1; done
    pango_markup enabled
    colors {
	statusline #ffffff
	background $base00
    focused_separator $base09

    focused_workspace   $base0E $base0E $base02
    active_workspace    $base0A $base0A $base02
	inactive_workspace  $base06 $base04 $base00
    }
}

include /etc/sway/config.d/*
